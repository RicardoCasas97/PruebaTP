<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PruebaTP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grisDisabled</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="toolbarStyle">@style/toolbar</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grisDisabled</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">@dimen/TextoToolbar</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/grisDisabled</item>
    </style>


    <style name="TextpToolbar">
        <item name="android:textSize">@dimen/TextoToolbar</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EditTextNormal" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/LayoutGrande</item>
        <item name="android:layout_width">@dimen/size_0</item>
        <item name="android:background">@color/grisDisabled</item>
        <item name="android:paddingStart">@dimen/paddingItems</item>
        <item name="android:paddingEnd">@dimen/paddingItems</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BotonNormal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/boton_dialog_reg</item>
        <item name="paddingEnd">@dimen/background_dim</item>
    </style>

    <style name="BotonTextoVerde" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/VerdeSemaforo</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/boton_dialog_reg</item>
        <item name="paddingEnd">@dimen/background_dim</item>
    </style>

    <style name="BotonTextoRojo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/RojoSemaforo</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@drawable/boton_dialog_reg</item>
        <item name="paddingEnd">@dimen/background_dim</item>
    </style>

    <style name="TextoAlerta" parent="AlertDialog">
        <item name="android:textSize">@dimen/TextoGrande</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">@dimen/TextoGrande</item>
        <item name="android:background">@color/fondoAzul</item>
        <item name="android:textAppearanceMedium">@style/TextoAlerta</item>
        <item name="buttonBarPositiveButtonStyle">@style/BotonTextoVerde</item>
        <!-- Style for negative button -->
        <item name="buttonBarNegativeButtonStyle">@style/BotonTextoRojo</item>
    </style>
    <style name="TextViewPantallaListado">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/TextViewLargo</item>
        <item name="android:layout_width">@dimen/size_0</item>
        <item name="android:textSize">@dimen/TextoGrande</item>
    </style>
    <style name="TextoTituloListado">
        <item name="android:textColor">@color/grisDisabled</item>
    </style>
    <style name="TextoListadoContenido">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ItemBanco">
        <item name="android:padding">@dimen/paddingItems</item>
        <item name="android:background">@drawable/background_lista_n</item>
        <item name="android:layout_margin">@dimen/background_dim</item>
    </style>
</resources>